doctype html
include includes/head.pug
script(src='/assets/js/form.js')
body
    include includes/nav.pug
    #content
      span.header
        h1 Resubmit 
        p You can edit your bot or find your bot auth details below.
      br
      form.center
        .input-holder
          input#botid.input(type='text' placeholder=' ' value=bot.botid readonly='')
          .placeholder Client ID
        br
        .input-holder
          input#prefix.input(type='text' placeholder=' ' value=bot.prefix)
          .placeholder Prefix
        br
        .input-holder
          input#short.input(maxlength='120' type='text' placeholder=' ' value=bot.description)
          .placeholder Summary
        br
        .input-holder
          input#invite.input(type='text' placeholder=' ' value=bot.invite)
          .placeholder Custom Invite
        br
        .input-holder
          textarea#longdesc.input(rows='7')
          .textarea-placeholder
            | Description
        br
        .input-holder
          input#owners.input.xinput(type='text' placeholder=' ' value=bot.additional)
          .placeholder Additional Owner IDs
        br
        a.button(onclick='submit(true)') Submit
        br
